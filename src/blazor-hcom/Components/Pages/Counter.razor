@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>
<div style="border: 1px solid black; height: 50vh; width: 70vw;"
     @onmouseover="MouseOver"
     @onmouseleave='() => divText = "" '>
	<p>@divText</p>
</div>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<button class="btn btn-secondary" @onclick="ResetCount">Reset Counter</button>

@code {
	private int currentCount = 0;
	private string divText = "";

	private void IncrementCount()
	{
		currentCount++;
	}

	private void ResetCount ()
	{
		currentCount = 0 ;
	}

	private void MouseOver(MouseEventArgs e)
	{
		divText = "You are hovering over here.";
	}

}
